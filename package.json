{
  "name": "dead-links-must-die",
  "version": "1.0.0",
  "description": "A simple, powerful tool to find and eliminate dead links and broken images on any website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "playwright test",
    "test:unit": "playwright test --project=unit",
    "test:integration": "playwright test --project=integration",
    "test:e2e": "playwright test --project=e2e",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report test-results/html"
  },
  "keywords": [
    "link-checker",
    "dead-links",
    "broken-links",
    "web-crawler",
    "seo",
    "website-validator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.2",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "playwright": "^1.57.0"
  }
}
